{
  "name": "your-package-name",
  "description": "Description",
  "version": "0.0.1",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "files": [
    "lib",
    "src",
    "tests",
    "LICENSE",
    "tsconfig.json",
    "README.md"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "testEnvironment": "node"
  },
  "prettier": {
    "semi": false,
    "useTabs": true,
    "printWidth": 140,
    "tabWidth": 8,
    "singleQuote": true,
    "trailingComma": "es5",
    "parser": "typescript",
    "arrowParens": "always"
  },
  "keywords": [],
  "scripts": {
    "docs": "typedoc src/index.ts",
    "build": "rm -rf lib && tsc --build",
    "format": "prettier --write \"**/src/**/*.ts\"",
    "watch": "yarn link && tsc --watch",
    "test": "jest",
    "postinstall": "git config core.hooksPath .githooks"
  },
  "author": "digimuza",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^27.5.1",
    "@types/node": "^13.13.5",
    "jest": "^28.1.0",
    "git-conventional-commits": "^1.2.0",
    "prettier": "^2.6.2",
    "ts-jest": "^28.0.3",
    "tslib": "^2.4.0",
    "typedoc": "^0.22.15",
    "typescript": "4.5.x"
  },
  "dependencies": {
    "ts-prime": "^1.0.0"
  }
}